    <script>



        //fade variables---
        var inc_interval
        var increase = 0.022;
        var opac_value = 0;
        //fade variables---


        //fade function---------
        function fade(id_type){
            opac_value = 0;

            inc_interval = setInterval(function(){
              opac_value += increase;
              document.getElementById(id_type).style.opacity = opac_value;
              document.getElementById(id_type).style.opacity = opac_value;



              if (opac_value >= 1){
              clearInterval(inc_interval);
              } 

              
            }, 100/5);

        }

        //fade function---------



    </script>
